<Window x:Class="MarktApplicatie.EditKraam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarktApplicatie"
        mc:Ignorable="d"
        Title="Editkraam" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="TextBlock">

            <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
            <Setter Property="TextBlock.Margin" Value="10, 10, 10, 30" />
        </Style>
    </Window.Resources>


    <Grid>




        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="155"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="19.25"/>
            <RowDefinition Height="23.75"/>
            <RowDefinition Height="12.643"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" MinHeight="28"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="94*"/>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="100"/>

        </Grid.RowDefinitions>




        <TextBlock Text="Homepagina" Grid.Row="3" 
                   MouseLeftButtonDown="onClick_homepage" Margin="23,0,6,3" Width="68"/>
        <TextBlock Text="edit bus" Grid.Column="4" Grid.Row="9"
                   MouseLeftButtonDown="onClick_changecity" Margin="38,0,36,14" Width="81"/>
        <TextBlock Text=" Verander m2" Grid.Column="1" Grid.Row="5"
                   MouseLeftButtonDown="onClick_changearea" Width="116" Margin="82,10,110,15" Grid.RowSpan="3"/>
        <TextBlock Text="Voeg plank toe" Grid.Column="4" Grid.Row="4"
                   MouseLeftButtonDown="onClick_addplank" Margin="39,3,36,0" Width="80"/>
        <TextBlock Text="Compositie Opslaan" Grid.Column="1" Grid.Row="1" MouseLeftButtonDown="onClick_Opslaan"/>





    </Grid>
</Window>
