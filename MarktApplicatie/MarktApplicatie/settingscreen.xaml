        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarktApplicatie"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Instellingen" Height="563.2" Width="1064.135" 
        >


    <Grid x:Name="LayoutRoot" RenderTransformOrigin="0.653,0.774">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="178*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="122*"/>

            <ColumnDefinition Width="222*"/>
            <ColumnDefinition Width="234*"/>
            <ColumnDefinition Width="197*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>





        </Grid.RowDefinitions>

        <RadioButton Name="checkbox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0.6,14,0,0" Width="169" Height="93" Grid.ColumnSpan="2" Grid.Column="1">
