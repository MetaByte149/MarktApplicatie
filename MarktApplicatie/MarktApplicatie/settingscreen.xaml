            <ColumnDefinition Width="234*"/>
            <ColumnDefinition Width="197*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>





        </Grid.RowDefinitions>

        <CheckBox Grid.Column="0" Name="checkbox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,58,0,0" Width="169" Height="93" Grid.ColumnSpan="2">
