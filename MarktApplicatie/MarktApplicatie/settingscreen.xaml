<Window x:Class="MarktApplicatie.settingscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarktApplicatie"
        mc:Ignorable="d"
        
        
        WindowState="Maximized"
        
        Title="Instellingen"    >


    <Grid x:Name="LayoutRoot">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="89*"/>

            <ColumnDefinition Width="106*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>





        </Grid.RowDefinitions>

        <CheckBox Grid.Column="0" Name="checkbox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,49,0,0" Width="164" Height="76">
            <TextBlock TextWrapping="Wrap" Height="76" Width="142" >
                Laat statistiek van de dag zien bij opstarten"
            </TextBlock>
        </CheckBox>
        <RadioButton Name="darkmode_on" GroupName="darkmode" Content="Darkmode aan" Margin="9.4,49,23,55.8" RenderTransformOrigin="2.24,-2.692" Grid.Column="1" />
        <RadioButton Name="darkmode_off" GroupName="darkmode" Content="Darkmode uit" Margin="9.4,100,0,4.8" Grid.Column="1" HorizontalAlignment="Left" Width="128" />

        <Button Click="Home_button" Grid.Column="3" Content="Home" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,1,-0.4,0" Height="39" Width="194" />
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Statisitiek van de dag:" VerticalAlignment="Top" Height="28" Width="167"/>
        <TextBlock FontWeight="Bold"  HorizontalAlignment="Left" Margin="9.4,10,0,0" TextWrapping="Wrap" Text="Darkmode:" VerticalAlignment="Top" RenderTransformOrigin="-0.441,0.329" Height="39" Width="106" Grid.Column="1"/>
        <Button Content="Save" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,58,-0.4,0"  Width="194" Click="Button_save" Height="38"/>
        <Button Content="Reset" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,116,-0.4,0"  Width="194" Click="Button_reset" Height="41"/>
        <TextBlock FontWeight="Bold"  HorizontalAlignment="Left" Margin="20,10,0,0" TextWrapping="Wrap" Text="Fontsize:" VerticalAlignment="Top" RenderTransformOrigin="-0.441,0.329" Height="39" Width="106" Grid.Column="2"/>

        <RadioButton Name="font8" GroupName="fontsize"  Margin="20,49,9.6,430.6" RenderTransformOrigin="2.24,-2.692" Grid.Column="2" >
            <WrapPanel>
                <Image Source="8.jpg" Height="22" Width="24"   />
            </WrapPanel>
        </RadioButton>

        <RadioButton Name="font10" GroupName="fontsize" Margin="20,80,0,400.6" Grid.Column="2" HorizontalAlignment="Left" Width="148" >
            <WrapPanel>
                <Image Source="10.jpg" Height="21" Width="27"   />
            </WrapPanel>
        </RadioButton>

        <RadioButton Name="font12" GroupName="fontsize" Margin="20,116,0,364.6" Grid.Column="2" HorizontalAlignment="Left" Width="148" >
            <WrapPanel>
                <Image Source="12.jpg" Width="33" Height="25"   />
            </WrapPanel>
        </RadioButton>

        <RadioButton Name="font14" GroupName="fontsize"  Margin="20,151,9.6,318.6" RenderTransformOrigin="2.24,-2.692" Grid.Column="2" >
            <WrapPanel>
                <Image Source="14.JPG" Height="30" Width="37"   />
            </WrapPanel>
        </RadioButton>

        <RadioButton Name="font16" GroupName="fontsize"  Margin="20,187,211.6,279.6" RenderTransformOrigin="2.24,-2.692" Grid.Column="2" Grid.ColumnSpan="2" >
            <WrapPanel>
                <Image Source="16.JPG" Height="42" Width="46"  />
            </WrapPanel>
        </RadioButton>

        <Button Content="Homescreensettings" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,172,-0.4,0"  Width="194" Click="Button_reset" Height="41" Grid.RowSpan="2"/>



    </Grid>




</Window>
