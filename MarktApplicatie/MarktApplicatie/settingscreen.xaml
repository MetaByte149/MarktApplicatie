        <TextBlock FontWeight="Bold"  HorizontalAlignment="Left" Margin="10,252,0,0" TextWrapping="Wrap" Text="Homescherm - Snelheid van achtergrond elementen:" VerticalAlignment="Top" RenderTransformOrigin="-0.441,0.329" Height="43" Width="220" Grid.ColumnSpan="2"/>
        <RadioButton Name="verdwijn" Grid.Column="1" Content="Verdwijn" RenderTransformOrigin="0.513,0.532" Margin="0.6,253,70.6,247.6" GroupName="elementspeed" Grid.ColumnSpan="2"/>
        <RadioButton Name="stil" Grid.Column="1" Content="Stil" RenderTransformOrigin="0.513,0.532" Margin="104.6,252,188.2,247.6" GroupName="elementspeed" Grid.ColumnSpan="3"/>
