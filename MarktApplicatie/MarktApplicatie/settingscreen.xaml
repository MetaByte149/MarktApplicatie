<Window x:Class="MarktApplicatie.settingscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarktApplicatie"
        mc:Ignorable="d"
        
        WindowState="Maximized"
        FontSize="16"
        Title="Instellingen"    >


    <Grid x:Name="LayoutRoot">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="165*"/>
            <ColumnDefinition Width="131*"/>

            <ColumnDefinition Width="239*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="213*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="82*"/>




        </Grid.RowDefinitions>

        <CheckBox Grid.Column="0" Name="checkbox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,49,0,0" Width="164" Height="76">
            <TextBlock TextWrapping="Wrap" Height="76" Width="142" >
                Laat statistiek van de dag zien bij opstarten"
            </TextBlock>
        </CheckBox>
        <RadioButton Name="darkmode_on" GroupName="darkmode" Content="Darkmode aan" Margin="9.4,49,23.2,55.8" RenderTransformOrigin="2.24,-2.692" Grid.Column="1" />
        <RadioButton Name="darkmode_off" GroupName="darkmode" Content="Darkmode uit" Margin="9.4,100,0,4.8" Grid.Column="1" HorizontalAlignment="Left" Width="128" />

        <Button FontSize="16" Click="Home_button" Grid.Column="3" Content="Home" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="58.4,1,-0.4,0" Height="39" Width="194" />
        <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Statisitiek van de dag:" VerticalAlignment="Top" Height="28" Width="167"/>
        <TextBlock FontWeight="Bold"  HorizontalAlignment="Left" Margin="9.4,10,0,0" TextWrapping="Wrap" Text="Darkmode:" VerticalAlignment="Top" RenderTransformOrigin="-0.441,0.329" Height="39" Width="106" Grid.Column="1"/>
        <Button Content="Save" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="58.4,58,-0.4,0"  Width="194" Click="Button_save" Height="38"/>
        <Button Content="Reset" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="58.4,116,-0.4,0"  Width="194" Click="Button_reset" Height="41"/>

    </Grid>




</Window>
