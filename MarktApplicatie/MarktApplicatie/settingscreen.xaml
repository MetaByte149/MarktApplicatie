<Window x:Class="MarktApplicatie.settingscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarktApplicatie"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Instellingen" Height="563.2" Width="1064.135" 
        >


    <Grid x:Name="LayoutRoot">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="178*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="122*"/>

            <ColumnDefinition Width="222*"/>
            <ColumnDefinition Width="234*"/>
            <ColumnDefinition Width="197*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>





        </Grid.RowDefinitions>

        <RadioButton Grid.Column="0" Name="checkbox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,58,0,0" Width="169" Height="93" Grid.ColumnSpan="2">
            <TextBlock TextWrapping="Wrap" Height="83" Width="146" >
                Laat statistiek van de dag zien bij opstarten
            </TextBlock>
        </RadioButton>
        <RadioButton Name="darkmode_on" GroupName="darkmode" Content="On" Margin="6,58,9,413" RenderTransformOrigin="2.24,-2.692" Grid.Column="1" />

        <RadioButton Name="darkmode_off" GroupName="darkmode" Content="Off" Margin="6,88,0,361" Grid.Column="1" HorizontalAlignment="Left" Width="102" Grid.ColumnSpan="2" />

        <Button  Background="Blue" Click="Home_button" Grid.Column="5" Content="Home" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,1,0,0" Height="39" Width="194" />
        <TextBlock  FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Statisitiek van de dag:" VerticalAlignment="Top" Height="53" Width="138"/>
        <TextBlock FontWeight="Bold"  HorizontalAlignment="Left" Margin="6,10,0,0" TextWrapping="Wrap" Text="Darkmode:" VerticalAlignment="Top" RenderTransformOrigin="-0.441,0.329" Height="34" Width="88" Grid.Column="1"/>
        <Button  Background="Green" Content="Save" Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,48,0,0"  Width="194" Click="Button_save" Height="38"/>
        <Button  Background="Red" Content="Reset" Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,94,0,0"  Width="194" Click="Button_reset" Height="41"/>
        <TextBlock FontWeight="Bold"  HorizontalAlignment="Left" Margin="18,10,0,0" TextWrapping="Wrap" Text="Fontsize:" VerticalAlignment="Top" RenderTransformOrigin="-0.441,0.329" Height="28" Width="84" Grid.Column="2"/>



        <RadioButton Name="font8" GroupName="fontsize"  Margin="18,58,14,422" RenderTransformOrigin="2.24,-2.692" Grid.Column="2" >
            <WrapPanel>
                <Image Source="8.jpg" Height="22" Width="24"   />
            </WrapPanel>
        </RadioButton>

        <RadioButton Name="font10" GroupName="fontsize" Margin="18,88,0,402" Grid.Column="2" HorizontalAlignment="Left" Width="68" >
            <WrapPanel>
                <Image Source="10.jpg" Height="21" Width="27"   />
            </WrapPanel>
        </RadioButton>

        <RadioButton Name="font12" GroupName="fontsize" Margin="18,130,0,355" Grid.Column="2" HorizontalAlignment="Left" Width="68" >
            <WrapPanel>
                <Image Source="12.jpg" Width="33" Height="25"   />
            </WrapPanel>
        </RadioButton>

        <RadioButton Name="font14" GroupName="fontsize"  Margin="18,171,30,314" RenderTransformOrigin="2.24,-2.692" Grid.Column="2" >
            <WrapPanel>
                <Image Source="14.JPG" Height="30" Width="37"   />
            </WrapPanel>
        </RadioButton>

        <RadioButton Name="font16" GroupName="fontsize"  Margin="18,218,14,251" RenderTransformOrigin="2.24,-2.692" Grid.Column="2" >
            <WrapPanel>
                <Image Source="16.JPG" Height="42" Width="46"  />
            </WrapPanel>
        </RadioButton>
        <TextBlock FontWeight="Bold"  HorizontalAlignment="Left" Margin="15,10,0,0" TextWrapping="Wrap" Text="Homescherm - achtergrondkleur:" VerticalAlignment="Top" RenderTransformOrigin="-0.441,0.329" Height="43" Width="194" Grid.Column="3"/>
        <RadioButton Name="darkmodehome" Grid.Column="3" Content="Zwart" RenderTransformOrigin="0.513,0.532" Margin="15,58,8,442" GroupName="Homecolor"/>
        <RadioButton Name="color1" GroupName="Homecolor" Content="Donkerblauw" Margin="15,88,0,410" Grid.Column="3" HorizontalAlignment="Left" Width="141" />
        <RadioButton Name="color2" GroupName="Homecolor" Content="Blauw" Margin="15,130,0,367" Grid.Column="3" HorizontalAlignment="Left" Width="141" />
        <RadioButton Name="color3" GroupName="Homecolor" Content="Lichtblauw" Margin="15,171,0,326" Grid.Column="3" HorizontalAlignment="Left" Width="141" />
        <RadioButton Name="darkmodehome_off" GroupName="Homecolor" Content="Wit" Margin="15,218,0,260" Grid.Column="3" HorizontalAlignment="Left" Width="133" />
        <TextBlock FontWeight="Bold"  HorizontalAlignment="Left" Margin="12,10,0,0" TextWrapping="Wrap" Text="Homescherm - Snelheid van achtergrond elementen:" VerticalAlignment="Top" RenderTransformOrigin="-0.441,0.329" Height="43" Width="220" Grid.Column="4"/>
        <RadioButton Name="verdwijn" Grid.Column="4" Content="Verdwijn" RenderTransformOrigin="0.513,0.532" Margin="12,58,66,442" GroupName="elementspeed"/>
        <RadioButton Name="stil" Grid.Column="4" Content="Stil" RenderTransformOrigin="0.513,0.532" Margin="12,88,66,412" GroupName="elementspeed"/>
        <RadioButton Name="Langzaam" Grid.Column="4" Content="Langzaam" RenderTransformOrigin="0.513,0.532" Margin="12,130,66,370" GroupName="elementspeed"/>
        <RadioButton Name="Normaal" Grid.Column="4" Content="Normaal" RenderTransformOrigin="0.513,0.532" Margin="12,171,66,329" GroupName="elementspeed"/>
        <RadioButton Name="Snel" Grid.Column="4" Content="Snel" RenderTransformOrigin="0.513,0.532" Margin="12,218,66,282" GroupName="elementspeed"/>


        <RadioButton Grid.Column="0" Name="checkbox2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Width="169" Height="93" Grid.ColumnSpan="2">
            <TextBlock TextWrapping="Wrap" Height="83" Width="146" >
                Laat statistiek van de dag niet zien bij opstarten
            </TextBlock>
        </RadioButton>
    </Grid>




</Window>
