        <RadioButton Name="Normaal" Grid.Column="4" Content="Normaal" RenderTransformOrigin="0.513,0.532" Margin="28.8,171,48.8,328.6" GroupName="elementspeed"/>
        <RadioButton Name="Snel" Grid.Column="4" Content="Snel" RenderTransformOrigin="0.513,0.532" Margin="28.8,218,48.8,281.6" GroupName="elementspeed"/>

    </Grid>




