<Window x:Class="MarktApplicatie.settingscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarktApplicatie"
        mc:Ignorable="d"
        FontSize="10"
        WindowState="Maximized"
        
        
        Title="Instellingen"    >


    <Grid x:Name="LayoutRoot">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>

        </Grid.RowDefinitions>

        <CheckBox Grid.Row="0" Grid.Column="0" Name="checkbox" FontSize="16" Content="Laat statistiek van de dag zien" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button FontSize="16" Click="Home_button" Grid.Column="0" Grid.Row="1" Content="Home" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="39,33.2,78.4,0" Height="63" Width="137" />



        <Button Content="Save" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Margin="62.6,83,0,0" VerticalAlignment="Top" Width="117" Click="Button_save" Height="37"/>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="569,355,0,0" VerticalAlignment="Top" Width="107" Click="Button_reset" Height="37"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="115.6,71.2,0,45.8" Grid.Row="1" Width="75" Grid.Column="1" />

    </Grid>




</Window>
