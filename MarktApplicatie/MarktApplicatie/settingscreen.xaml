        <RadioButton Name="Normaal" Grid.Column="3" Content="Normaal" RenderTransformOrigin="0.513,0.532" Margin="0.4,252,65.2,248.6" GroupName="elementspeed"/>
        <RadioButton Name="Snel" Grid.Column="3" Content="Snel" RenderTransformOrigin="0.513,0.532" Margin="182.4,252,116.8,247.6" GroupName="elementspeed" Grid.ColumnSpan="2"/>


        <RadioButton Name="checkbox2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="121.8,14,0,0" Width="184" Height="72" Grid.ColumnSpan="2" Grid.Column="2">
            <TextBlock TextWrapping="Wrap" Height="83" Width="146" >
                Laat statistiek van de dag niet zien bij opstarten
            </TextBlock>
        </RadioButton>
        <RadioButton Name="normalmode" GroupName="darkmode" Content="Normaal" HorizontalAlignment="Left" Margin="104.6,82,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.519,-0.684" Grid.Column="1" Grid.ColumnSpan="2"/>
