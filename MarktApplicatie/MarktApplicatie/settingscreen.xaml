            </TextBlock>
        </RadioButton>
        <RadioButton Name="darkmode_on" GroupName="darkmode" Content="Aan" Margin="178,82,15.2,426.6" RenderTransformOrigin="2.24,-2.692" Grid.ColumnSpan="2" />

        <RadioButton Name="darkmode_off" GroupName="darkmode" Content="Uit" Margin="121.8,82,0,427.6" HorizontalAlignment="Left" Width="102" Grid.Column="2" Grid.ColumnSpan="2" />

        <Button  Click="Home_button" Grid.Column="5" Content="Home" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,1,0,0" Height="39" Width="194" />
        <TextBlock  FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Statisitiek van de dag:" VerticalAlignment="Top" Height="62" Width="69"/>
        <TextBlock FontWeight="Bold"  HorizontalAlignment="Left" Margin="10,75,0,0" TextWrapping="Wrap" Text="Darkmode:" VerticalAlignment="Top" RenderTransformOrigin="-0.441,0.329" Height="25" Width="69"/>
        <Button   Content="Save" Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,48,0,0"  Width="194" Click="Button_save" Height="38"/>
        <Button   Content="Reset" Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,94,0,0"  Width="194" Click="Button_reset" Height="41"/>
        <TextBlock FontWeight="Bold"  HorizontalAlignment="Left" Margin="10,129,0,0" TextWrapping="Wrap" Text="Fontsize:" VerticalAlignment="Top" RenderTransformOrigin="-0.441,0.329" Height="28" Width="84"/>



