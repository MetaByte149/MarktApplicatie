<Window x:Class="MarktApplicatie.save_popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarktApplicatie"
        mc:Ignorable="d"
        Title="save_popup" Height="200" Width="300">
    <Grid x:Name="grid">
        <StackPanel x:Name="tabs">
            <TextBlock Text="Geef je compositie een naam:" FontSize="20"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="inp_box" Height="60" Margin="10"/>
            <Button x:Name="save" Content="Save" Click="Save"
                    FontSize="15"/>
        </StackPanel>
        
    </Grid>
    
</Window>