<Window x:Class="MarktApplicatie.OudeComposities"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarktApplicatie"
        mc:Ignorable="d"
        Title="Oude Composities" Height="500" Width="800">

    <Grid ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="403*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="82"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="420"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>


        <TextBox Name ="tabName" Text="" Grid.Column ="2" ></TextBox>
        <Button Name="editTitle"  Click="btnEditTitle_Click" Grid.Column="3" Grid.ColumnSpan="2" Margin="2,0,5,378">Edit</Button>
        <TextBlock Text="Homepagina" Grid.Column="5" Grid.Row="0"  MouseLeftButtonDown="onClick_homepage" Margin="0,0,0,391"   />
        <TabControl SelectionChanged="TabControl_SelectionChanged" TabStripPlacement="Left" Grid.Column="0" Grid.Row="0" Margin="0,0,27,0">
            <TabControl.Resources>
                <Style TargetType="TabItem" x:Key="SideBarSectionStyle">
                    <Setter Property="IsEnabled" Value="False" />
                    <Setter Property="FontSize" Value="16" />
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="SAVED" />
            <TabItem Name ="tab1" Header="Tab Item 1" Height="49" Width="200" IsSelected="True" />
            <TabItem Name ="tab2" Header="Tab Item 2" Height="49" Width="200"/>
            <TabItem Name ="tab3" Header="Tab Item 3" Height="49" Width="200"/>
            <TabItem Name ="tab4" Header="Tab Item 4" Height="49" Width="200"/>
            <TabItem Name ="tab5" Header="Tab Item 5" Height="49" Width="200"/>
            <TabItem Name ="tab6" Header="Tab Item 6" Height="49" Width="200"/>
            <TabItem Name ="tab7" Header="Tab Item 7" Height="49" Width="200"/>
            <TabItem Name ="tab8" Header="Tab Item 8" Height="49" Width="200"/>

        </TabControl>
        <Image Margin="12,40,14,68" Name="imgPhoto"
        Stretch="Fill" Grid.Column="2" />

        <Button Click="btnLoad_Click" Grid.Column="5" Grid.Row="1">Choose File</Button>
        <Button Click="btnSave_Click" Grid.Column="5" Grid.Row="2" >Save</Button>
        <Button Click="btnLoadPlanks_Click" Grid.Column="5" Grid.Row="3">Load Planks</Button>
    </Grid>
</Window>
